<Page
    x:Class="Aplikacja_TCP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Aplikacja_TCP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid ToolTipService.ToolTip="T">
        <TextBlock x:Name="textBlock_hostname" HorizontalAlignment="Left" Margin="10,12,0,0" TextWrapping="Wrap" Text="Hostname:" VerticalAlignment="Top" FontSize="18" Width="106"/>
        <TextBlock x:Name="textBlock_port" HorizontalAlignment="Left" Margin="10,52,0,0" TextWrapping="Wrap" Text="Port:" VerticalAlignment="Top" FontSize="18" Width="51"/>
        <TextBlock x:Name="textBlock_send" HorizontalAlignment="Left" Margin="10,134,0,0" TextWrapping="Wrap" Text="Text to send:" VerticalAlignment="Top" FontSize="18" Width="122"/>
        <TextBox x:ConnectionId='1' x:Name="ServerHostname" HorizontalAlignment="Left" Margin="120,2,0,0" TextWrapping="Wrap" Text="192.168.4.1" VerticalAlignment="Top" Width="270"                                          FontSize="20" FontFamily="Calibri" Height="32" TextAlignment="Center"/>
        <TextBox x:ConnectionId='2' x:Name="ServerPort" HorizontalAlignment="Left" Margin="120,40,0,0" TextWrapping="Wrap" Text="80" VerticalAlignment="Top" Width="270"                                      FontSize="20" FontFamily="Calibri" Height="32" TextAlignment="Center"/>
        <TextBox x:ConnectionId='3' x:Name="SendText" HorizontalAlignment="Left" Margin="120,122,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="270"                                    FontSize="20" FontFamily="Calibri" Height="32" TextAlignment="Center"/>
        <Button x:ConnectionId='4' x:Name="button_Connect" Content="Connect" HorizontalAlignment="Left" Margin="205,70,0,0" VerticalAlignment="Top" Width="185"                       ClickMode="Press"/>
        <Button x:ConnectionId='5' x:Name="button_Send" Content="Send" HorizontalAlignment="Left" Margin="205,152,0,0" VerticalAlignment="Top" Width="185"                    ClickMode="Press"/>
        <TextBlock x:ConnectionId='6' x:Name="OutputView" Margin="0,590,0,-60" TextWrapping="Wrap" Text="Please connect to TCP port" VerticalAlignment="Top" FontSize="14"                                                RenderTransformOrigin="-2.300,0.500" Foreground="#FFFF0505" Height="110" TextAlignment="Center" FontFamily="Calibri"/>
        <Button x:ConnectionId='7' x:Name="button_Up" Content="Up" HorizontalAlignment="Left" Margin="145,200,0,0" VerticalAlignment="Top"                         ClickMode="Press"/>
        <Button x:ConnectionId='8' x:Name="button_Down" Content="Down" HorizontalAlignment="Left" Margin="145,289,0,0" VerticalAlignment="Top"                           ClickMode="Press"/>
        <Button x:ConnectionId='9' x:Name="button_Right" Content="Right" HorizontalAlignment="Left" Margin="260,244,0,0" VerticalAlignment="Top"                            ClickMode="Press"/>
        <Button x:ConnectionId='10' x:Name="button_Left" Content="Left" HorizontalAlignment="Left" Margin="30,244,0,0" VerticalAlignment="Top"                           ClickMode="Press"/>
        <Button x:ConnectionId='11' x:Name="button_Start" Content="Stop" HorizontalAlignment="Left" Margin="145,244,0,0" VerticalAlignment="Top"                            ClickMode="Press"/>
        <Button x:ConnectionId='12' x:Name="button_L1" Content="L1" HorizontalAlignment="Left" Margin="30,338,0,0" VerticalAlignment="Top" Width="4" Height="39"                         ClickMode="Press"                              />
        <Button x:ConnectionId='13' x:Name="button_L2" Content="L2" HorizontalAlignment="Left" Margin="30,388,0,0" VerticalAlignment="Top" Width="4" Height="39"                         ClickMode="Press"                              />
        <Button x:ConnectionId='14' x:Name="button_L3" Content="L3" HorizontalAlignment="Left" Margin="30,438,0,0" VerticalAlignment="Top" Width="4" Height="39"                         ClickMode="Press"                              />
        <Button x:ConnectionId='15' x:Name="button_L4" Content="L4" HorizontalAlignment="Left" Margin="30,488,0,0" VerticalAlignment="Top" Width="4" Height="39"                         ClickMode="Press"                              />
        <Button x:ConnectionId='16' x:Name="button_L5" Content="L5" HorizontalAlignment="Left" Margin="30,538,0,0" VerticalAlignment="Top" Width="4" Height="39"                         ClickMode="Press"                              />
        <Button x:ConnectionId='17' x:Name="button_S1" Content="S1" HorizontalAlignment="Left" Margin="145,338,0,0" VerticalAlignment="Top" Width="4" Height="39"                         ClickMode="Press"                              />
        <Button x:ConnectionId='18' x:Name="button_S2" Content="S2" HorizontalAlignment="Left" Margin="145,388,0,0" VerticalAlignment="Top" Width="4" Height="39"                         ClickMode="Press"                              />
        <Button x:ConnectionId='19' x:Name="button_S3" Content="S3" HorizontalAlignment="Left" Margin="145,438,0,0" VerticalAlignment="Top" Width="4" Height="39"                         ClickMode="Press"                              />
        <Button x:ConnectionId='20' x:Name="button_S4" Content="S4" HorizontalAlignment="Left" Margin="145,488,0,0" VerticalAlignment="Top" Width="4" Height="39"                         ClickMode="Press"                              />
        <Button x:ConnectionId='21' x:Name="button_S5" Content="S5" HorizontalAlignment="Left" Margin="145,538,0,0" VerticalAlignment="Top" Width="4" Height="39"                         ClickMode="Press"                              />
        <Button x:ConnectionId='22' x:Name="button_R1" Content="R1" HorizontalAlignment="Left" Margin="260,338,0,0" VerticalAlignment="Top" Width="4" Height="39"                         ClickMode="Press"                              />
        <Button x:ConnectionId='23' x:Name="button_R2" Content="R2" HorizontalAlignment="Left" Margin="260,388,0,0" VerticalAlignment="Top" Width="4" Height="39"                         ClickMode="Press"                              />
        <Button x:ConnectionId='24' x:Name="button_R3" Content="R3" HorizontalAlignment="Left" Margin="260,438,0,0" VerticalAlignment="Top" Width="4" Height="39"                         ClickMode="Press"                              />
        <Button x:ConnectionId='25' x:Name="button_R4" Content="R4" HorizontalAlignment="Left" Margin="260,488,0,0" VerticalAlignment="Top" Width="4" Height="39"                         ClickMode="Press"                              />
        <Button x:ConnectionId='26' x:Name="button_R5" Content="R5" HorizontalAlignment="Left" Margin="260,538,0,0" VerticalAlignment="Top" Width="4" Height="39"                         ClickMode="Press"                              />
        <Button x:ConnectionId='27' x:Name="button_Auto" Content="Auto" HorizontalAlignment="Left" Margin="10,152,0,0" VerticalAlignment="Top"                           Height="34" Width="185" ClickMode="Press"/>
        <Button x:ConnectionId='28' x:Name="button_Disconnect" Content="Disconnect" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="185"                          ClickMode="Press"/>
    </Grid>
</Page>

